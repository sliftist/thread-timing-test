{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es2018",
        "jsx": "react",
        "alwaysStrict": true,
        "jsxFactory": "preact.createElement",
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
    },
    "exclude": ["dist"]
}